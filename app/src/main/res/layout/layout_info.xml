<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="horizontal"
            android:background="#37474f">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_weight="0.8">
                <ImageView
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/image_percent"
                    android:src="@drawable/battery0"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="60%"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:id="@+id/text_percent"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="@string/time_remaining"
                    android:textSize="20sp"
                    android:id="@+id/text_remaining_type"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_charging"
                        android:id="@+id/main_charging_status"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/text_timeremaining"
                        android:textSize="30sp"
                        android:textColor="#ffffff"/>
                </LinearLayout>

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="@string/optimize"
                    android:clickable="true"
                    android:id="@+id/optimize_butt"
                    android:background="@drawable/optimize_butt"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>