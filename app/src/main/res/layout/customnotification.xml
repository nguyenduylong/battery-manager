<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:background="@color/tool_not_pressed">
    <ImageView
        android:padding="5dp"
        android:id="@+id/imagenotileft"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:textSize="15sp"
            android:padding="2dp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:text="@string/charge_time_remaining"
            android:layout_toRightOf="@+id/imagenotileft" />
        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="top|left"
            android:textColor="@color/text_color"
            android:textSize="17sp"
            android:padding="2dp"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/imagenotileft" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.25"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_notifi_battery"
            android:padding="2dp"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/notifi_pin1"/>
        <ImageView
            android:padding="2dp"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/notifi_temp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_level"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:padding="5dp"
            android:layout_toRightOf="@+id/imagenotileft" />
        <TextView
            android:id="@+id/text_temp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/imagenotileft" />
    </LinearLayout>
    <ImageView
        android:id="@+id/notifi_clean"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/notifi_optimize_butt"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:clickable="true"/>

</LinearLayout>