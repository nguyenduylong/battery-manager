<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="0.5dp"
    android:layout_marginRight="0.5dp"
    android:layout_marginBottom="0.5dp"
    android:background="#37474f">
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/tool_butt"
            android:clickable="true"
            android:id="@+id/wifi_butt"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:id="@+id/wifi_state"
                android:src="@drawable/tool_wifi_off"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Wi-fi"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:id="@+id/data_butt"
            android:background="@drawable/tool_butt"
            android:clickable="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:id="@+id/data_state"
                android:src="@drawable/tool_data_off"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Data"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:id="@+id/lighness_butt"
            android:background="@drawable/tool_butt"
            android:clickable="true"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:id="@+id/lightness_state"
                android:src="@drawable/tool_lightness_off"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Lightness"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/tool_butt"
            android:clickable="true"
            android:gravity="center"
            android:id="@+id/state_butt"
            android:layout_weight="1">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:id="@+id/ringtone_state"
                android:src="@drawable/ringer_normal"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="State"/>
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/tool_butt"
            android:clickable="true"
            android:id="@+id/vibrate_butt"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:id="@+id/vibrate_state"
                android:src="@drawable/tool_vibrate_off"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Vibrate"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:id="@+id/gps_butt"
            android:gravity="center"
            android:background="@drawable/tool_butt"
            android:clickable="true"
            android:layout_weight="1">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:id="@+id/gps_state"
                android:src="@drawable/tool_gps_off"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="GPS"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/tool_butt"
            android:clickable="true"
            android:id="@+id/bluetooth_butt"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:id="@+id/bluetooth_state"
                android:src="@drawable/tool_bluetooth_off"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Bluetooth"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/tool_butt"
            android:clickable="true"
            android:id="@+id/airplane_butt"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:src="@drawable/tool_airplane_off"
                android:id="@+id/airplane_state"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Airplane"/>
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/tool_butt"
            android:clickable="true"
            android:id="@+id/screenoff_butt"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:id="@+id/screenoff_state"
                android:src="@drawable/tool_timeout"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Screen Off"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/tool_butt"
            android:clickable="true"
            android:id="@+id/rotate_butt"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:id="@+id/rotate_state"
                android:src="@drawable/tool_rotate_off"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Rotation"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/tool_butt"
            android:clickable="true"
            android:id="@+id/sync_butt"
            android:layout_weight="1">
            <ImageView
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_weight="1"
                android:id="@+id/sync_state"
                android:src="@drawable/tool_sync_off"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Auto Sync"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="1">
        </LinearLayout>
    </TableRow>
</TableLayout>